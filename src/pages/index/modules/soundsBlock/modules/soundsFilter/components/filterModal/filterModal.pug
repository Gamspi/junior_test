extends constants
block content
    .filter-modal.j-filter-modal
        .filter-modal__container
            button.filter-modal__close-btn.j-filter-close
                +useSvg('ico-login-close', '.filter-modal__close-svg')
            h4.filter-modal__title Filter
            .filter-modal__time-slider
                +sliderInput('Duration', '0.00', '2.00')
            .filter-modal__select-categories
                +castomSelect(optionsFilter)
            .filter-modal__checkboxes.filter-modal-checkboxes
                .filter-modal-checkboxes__item
                    +checkboxInput('onlyFree', 'Only free sounds', true, 2)
                .filter-modal-checkboxes__item
                    +checkboxInput('myFavorite', 'Only my favorite sounds', true, 2)


            +button('Apply','filter-modal__apply','button')
