extends constants
include components/testimonialsItem/testimonialsItem
include ../../../../components/pagination/pagination
block content
    section.testimonials
        .testimonials__container
            .testimonials__header
                h3.testimonials__sup-title TESTIMONIALS
                h2.testimonials__title Hear good experiences from our customers
            .testimonials__list.j-swiper
                ul.testimonials__wrapper.swiper-wrapper
                    each item in testimonialsCards
                        li.testimonials__item.swiper-slide
                            +testimonialsItem(item.text,item.name,item.job,item.src)
            .testimonials__pagination
                +pagination('j-pagination-testimonials')
